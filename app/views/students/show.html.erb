<div class="row sign-up-form">
  <div class="col s12 m12 l8">
     <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title font-size">Name:<%= @student.name %></span>
          <p>Email: <%= @student.email %></p>
          <p>Course Enrollments: 
          <% if @student.courses.empty? %>
            None
          <% else %>
          <ul>
           <% @student.courses.each do |course| %>
            <li><%= course.name %></li>
           <% end %>
          </ul>
          <% end %>
          </p>
        </div>
      </div>
      <% if current_user == @student %> 
        <%= link_to '<i class="material-icons right">create</i>Edit profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light orange btn" %>
      <% end %>
    </div>
 </div>
